<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Match.
    -->
    <changeSet id="20170627083527-1" author="jhipster">
        <createTable tableName="match">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jhi_start" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="jhi_stop" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="diff_level" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="user_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="last_start" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="time_spent" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="used_to_po" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="elaborated" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="match_token" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="valid" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="send_to_po" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="retry" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="anomalous" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="game_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="template_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="session_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="match" columnName="jhi_start" columnDataType="datetime"/>
        <dropDefaultValue tableName="match" columnName="jhi_stop" columnDataType="datetime"/>
        <dropDefaultValue tableName="match" columnName="last_start" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
